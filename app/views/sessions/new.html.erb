<h1>Login</h1>
<%= form_for :session, :url => post_session_path do |f| %>
  <div>
    <%= f.label :email %> <br />
    <%= f.text_field :email, :placeholder => 'email', :value => @email, :required => true, :class => 'text-field' %> <br />
  </div>
  <div>
    <%= f.label :password %> <br />
    <%= f.password_field :password, :placeholder => 'password', :required => true, :class => 'text-field' %> <br />
  </div>
  <div class='center'>
    <%= f.submit 'Login', :class => 'button' %> <br />
  </div>
<% end %>
