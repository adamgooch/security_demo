<!DOCTYPE html>
<html>
<head>
  <title>SecurityDemo</title>
  <%= stylesheet_link_tag "normalize", :media => "all" %>
  <%= stylesheet_link_tag "styles", :media => "all" %>
  <%= stylesheet_link_tag "login", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
  <% end %>
  <div id='content'>
    <%= yield %>
    <% debug(params) if Rails.env.development? %>
  </div>
  <div class='push'></div>
  <%= render 'layouts/footer' %>
</body>
</html>
