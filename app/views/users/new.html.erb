<h1>Sign Up!</h1>
<% if flash[:error] %>
  <p class="notice"><%= flash[:error] %></p>
<% end %>
<%= form_for @user, :url => post_signup_path do |f| %>
  <%= f.label :email %> <br />
  <%= f.text_field :email, :required => true %> <br />

  <%= f.label :password %> <br />
  <%= f.password_field :password, :required => true %> <br />

  <%= f.label :password_confirmation, "Confirmation" %> <br />
  <%= f.password_field :password_confirmation, :required => true %> <br />

  <%= f.submit "Create Account" %> <br />
<% end %>
